<% if review.product_url && allow_move_to_shop? %>
  <%= content_tag :a, class: 'link-to-product link-iframe', data: {url: review.product_url} do %>
    <%= image_tag review.product_image_url, alt: review.product_name, width: 70, height: 70, class: 'link-to-product' %>
  <% end %>
<% else %>
  <%= content_tag :span, class: 'link-to-product' do %>
    <%= image_tag review.product_image_url, alt: review.product_name, width: 70, height: 70 %>
  <% end %>
<% end %>
